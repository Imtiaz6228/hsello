# =============================================================================
# DIGITALMARKET VPS CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for your VPS environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For VPS hosting, use one of these options:

# Option 1: MongoDB Atlas (Recommended for VPS)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/digitalmarket?retryWrites=true&w=majority

# Option 2: Local MongoDB on VPS
# MONGODB_URI=mongodb://localhost:27017/digitalmarket

# Option 3: Remote MongoDB server
# MONGODB_URI=mongodb://your-mongo-server:27017/digitalmarket

MONGODB_URI=mongodb://localhost:27017/digitalmarket

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production

# Session secret (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Base URL for your VPS (used for email verification links)
BASE_URL=http://your-vps-ip:3001

# =============================================================================
# EMAIL CONFIGURATION (Required for signup verification)
# =============================================================================
# Option 1: Gmail SMTP (Recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Option 2: SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Option 3: Mailgun
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=your-mailgun-username
# EMAIL_PASS=your-mailgun-password

# =============================================================================
# PAYMENT CONFIGURATION (NOWPayments)
# =============================================================================
NOWPAYMENTS_API_KEY=your-nowpayments-api-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable/disable email verification (set to false for testing)
REQUIRE_EMAIL_VERIFICATION=true

# Password requirements
MIN_PASSWORD_LENGTH=6

# Rate limiting
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.csv,.xlsx,.xls,.json,.xml,.sql

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# =============================================================================
# VPS SPECIFIC SETTINGS
# =============================================================================
# Set to true if running behind a proxy (nginx, apache, etc.)
TRUST_PROXY=true

# Timezone for your VPS
TZ=UTC

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
# Set to true for detailed error messages (disable in production)
DEBUG_MODE=false

# Enable demo/test features
ENABLE_DEMO_MODE=false