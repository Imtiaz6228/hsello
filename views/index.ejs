  <!-- Top Selling Products Search and Filter Script -->
  <script>
    let currentCategoryFilter = 'all';
    let currentSortOption = 'sales';

    function handleSearchKeyUp(event) {
      if (event.key === 'Enter') {
        filterProducts();
      }
    }

    function filterProducts() {
      // Show loading state
      const searchBtn = document.querySelector('.search-btn');
      if (searchBtn) {
        searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Searching...';
        searchBtn.disabled = true;
      }

      const searchTerm = document.getElementById('productSearch').value.toLowerCase();
      const sortOption = document.getElementById('sortSelect').value;
      const priceFilter = document.getElementById('priceFilter').value;

      const productCards = document.querySelectorAll('.top-selling-product-card');
      let visibleCount = 0;

      // Convert NodeList to Array for sorting
      const productsArray = Array.from(productCards);

      // Filter products
      productsArray.forEach(card => {
        const productName = card.dataset.name || '';
        const storeName = card.dataset.store || '';
        const tags = card.dataset.tags || '';
        const category = card.dataset.category || '';
        const price = parseFloat(card.dataset.price || 0);
        const sales = parseInt(card.dataset.sales || 0);

        // Category filter
        const categoryMatch = currentCategoryFilter === 'all' || category === currentCategoryFilter;

        // Enhanced search filter
        const searchMatch = !searchTerm ||
          productName.includes(searchTerm) ||
          storeName.includes(searchTerm) ||
          tags.includes(searchTerm) ||
          category.toLowerCase().includes(searchTerm);

        // Price filter
        let priceMatch = true;
        if (priceFilter !== 'all') {
          const [min, max] = priceFilter.split('-').map(p => p === '+' ? Infinity : parseFloat(p));
          priceMatch = price >= min && (max === Infinity ? true : price <= max);
        }

        // Show/hide based on filters
        if (categoryMatch && searchMatch && priceMatch) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      // Sort visible products
      const visibleProducts = productsArray.filter(card => card.style.display !== 'none');

      // Sort based on selected option
      visibleProducts.sort((a, b) => {
        const aPrice = parseFloat(a.dataset.price || 0);
        const bPrice = parseFloat(b.dataset.price || 0);
        const aSales = parseInt(a.dataset.sales || 0);
        const bSales = parseInt(b.dataset.sales || 0);

        switch(sortOption) {
          case 'price-low':
            return aPrice - bPrice;
          case 'price-high':
            return bPrice - aPrice;
          case 'sales':
            return bSales - aSales;
          case 'popularity':
            return bSales - aSales; // Using sales as popularity proxy
          case 'newest':
            // For demo, we'll keep current order as newest
            return 0;
          default:
            return bSales - aSales;
        }
      });

      // Reorder DOM elements
      const container = document.getElementById('topSellingProductsGrid');
      visibleProducts.forEach(card => {
        container.appendChild(card);
      });

      // Update filter tags visual state
      updateFilterTags();

      // Update results count
      updateResultsCount(Math.min(visibleCount, currentDisplayCount));

      // Show/hide load more button based on available products
      const loadMoreBtn = document.getElementById('loadMoreBtn');
      if (loadMoreBtn) {
        loadMoreBtn.style.display = visibleCount > currentDisplayCount ? 'inline-flex' : 'none';
      }

      // Reset loading state
      setTimeout(() => {
        if (searchBtn) {
          searchBtn.innerHTML = '<i class="fas fa-search"></i> Search';
          searchBtn.disabled = false;
        }
      }, 300);
    }

    function updateResultsCount(count) {
      let resultsDiv = document.getElementById('resultsCount');
      if (!resultsDiv) {
        const container = document.querySelector('.top-selling-products-grid');
        if (container) {
          resultsDiv = document.createElement('div');
          resultsDiv.id = 'resultsCount';
          resultsDiv.style.cssText = 'text-align: center; margin-bottom: 1rem; color: #64748b; font-weight: 600;';
          container.parentNode.insertBefore(resultsDiv, container);
        }
      }
      if (resultsDiv) {
        resultsDiv.textContent = `Showing ${count} product${count !== 1 ? 's' : ''}`;
      }
    }

    function setCategoryFilter(category) {
      currentCategoryFilter = category;

      // Update active filter tag
      document.querySelectorAll('.filter-tag').forEach(tag => {
        if (tag.dataset.filter === category) {
          tag.classList.add('active');
          tag.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
          tag.style.color = 'white';
          tag.style.borderColor = 'transparent';
          tag.style.boxShadow = '0 4px 12px rgba(102, 126, 234, 0.3)';
        } else {
          tag.classList.remove('active');
          tag.style.background = 'white';
          tag.style.color = '#64748b';
          tag.style.borderColor = '#e2e8f0';
          tag.style.boxShadow = 'none';
        }
      });

      filterProducts();
    }

    function clearAllFilters() {
      // Reset search
      document.getElementById('productSearch').value = '';

      // Reset category filter
      setCategoryFilter('all');

      // Reset sort
      document.getElementById('sortSelect').value = 'sales';

      // Reset price filter
      document.getElementById('priceFilter').value = 'all';

      // Apply filters
      filterProducts();
    }

    function updateFilterTags() {
      // Update visual feedback for active filters
      const searchInput = document.getElementById('productSearch');
      const sortSelect = document.getElementById('sortSelect');
      const priceFilter = document.getElementById('priceFilter');

      // Add visual feedback for active filters
      if (searchInput.value.trim()) {
        searchInput.style.borderColor = '#667eea';
        searchInput.style.boxShadow = '0 0 0 3px rgba(102, 126, 234, 0.1)';
      } else {
        searchInput.style.borderColor = '#e2e8f0';
        searchInput.style.boxShadow = 'none';
      }

      if (priceFilter.value !== 'all') {
        priceFilter.style.borderColor = '#667eea';
        priceFilter.style.boxShadow = '0 0 0 3px rgba(102, 126, 234, 0.1)';
      } else {
        priceFilter.style.borderColor = '#e2e8f0';
        priceFilter.style.boxShadow = 'none';
      }
    }

    let allProductsData = [];
    let currentDisplayCount = 5;
    const productsPerLoad = 5;

    // Store all products data for load more functionality
    function storeAllProductsData() {
      const productCards = document.querySelectorAll('.top-selling-product-card');
      allProductsData = Array.from(productCards).map(card => ({
        element: card,
        category: card.dataset.category || '',
        price: parseFloat(card.dataset.price || 0),
        sales: parseInt(card.dataset.sales || 0),
        name: (card.dataset.name || '').toLowerCase(),
        store: (card.dataset.store || '').toLowerCase(),
        tags: (card.dataset.tags || '').toLowerCase()
      }));
    }

    function loadMoreProducts() {
      const loadMoreBtn = document.getElementById('loadMoreBtn');
      loadMoreBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
      loadMoreBtn.disabled = true;

      // Simulate loading delay for better UX
      setTimeout(() => {
        const container = document.getElementById('topSellingProductsGrid');
        const searchTerm = document.getElementById('productSearch').value.toLowerCase();
        const sortOption = document.getElementById('sortSelect').value;
        const priceFilter = document.getElementById('priceFilter').value;

        // Filter products based on current filters
        let filteredProducts = allProductsData.filter(product => {
          const categoryMatch = currentCategoryFilter === 'all' || product.category === currentCategoryFilter;
          const searchMatch = !searchTerm ||
            product.name.includes(searchTerm) ||
            product.store.includes(searchTerm) ||
            product.tags.includes(searchTerm) ||
            product.category.toLowerCase().includes(searchTerm);

          let priceMatch = true;
          if (priceFilter !== 'all') {
            const [min, max] = priceFilter.split('-').map(p => p === '+' ? Infinity : parseFloat(p));
            priceMatch = product.price >= min && (max === Infinity ? true : product.price <= max);
          }

          return categoryMatch && searchMatch && priceMatch;
        });

        // Sort filtered products
        filteredProducts.sort((a, b) => {
          switch(sortOption) {
            case 'price-low':
              return a.price - b.price;
            case 'price-high':
              return b.price - a.price;
            case 'sales':
              return b.sales - a.sales;
            case 'popularity':
              return b.sales - a.sales;
            case 'newest':
              return 0;
            default:
              return b.sales - a.sales;
          }
        });

        // Show next batch of products
        const startIndex = currentDisplayCount;
        const endIndex = Math.min(startIndex + productsPerLoad, filteredProducts.length);

        for (let i = startIndex; i < endIndex; i++) {
          const product = filteredProducts[i];
          if (product && product.element) {
            product.element.style.display = 'block';
            container.appendChild(product.element);
          }
        }

        currentDisplayCount = endIndex;

        // Update results count
        updateResultsCount(currentDisplayCount);

        // Hide load more button if no more products
        if (currentDisplayCount >= filteredProducts.length) {
          loadMoreBtn.style.display = 'none';
        }

        // Reset button
        loadMoreBtn.innerHTML = '<i class="fas fa-plus"></i> Load More Products';
        loadMoreBtn.disabled = false;
      }, 800);
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Store all products data
      storeAllProductsData();

      // Initially hide products beyond the first 5
      const productCards = document.querySelectorAll('.top-selling-product-card');
      productCards.forEach((card, index) => {
        if (index >= 5) {
          card.style.display = 'none';
        }
      });

      // Set initial active filter
      setCategoryFilter('all');

      // Add input event listeners for real-time filtering
      document.getElementById('productSearch').addEventListener('input', function() {
        // Debounce search for better performance
        clearTimeout(this.searchTimeout);
        this.searchTimeout = setTimeout(() => {
          currentDisplayCount = 5; // Reset display count on filter change
          filterProducts();
        }, 300);
      });

      // Add change listeners for select elements
      document.getElementById('sortSelect').addEventListener('change', function() {
        currentDisplayCount = 5; // Reset display count on sort change
        filterProducts();
      });
      document.getElementById('priceFilter').addEventListener('change', function() {
        currentDisplayCount = 5; // Reset display count on filter change
        filterProducts();
      });
    });

    // Add smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Handle store logo loading
    document.addEventListener('DOMContentLoaded', function() {
      const storeLogos = document.querySelectorAll('.store-logo[data-logo]');
      storeLogos.forEach(logo => {
        const logoPath = logo.getAttribute('data-logo');
        if (logoPath && logoPath.trim() !== '') {
          const img = new Image();
          img.onload = function() {
            logo.style.backgroundImage = `url('/uploads/${logoPath}')`;
            logo.style.backgroundSize = 'cover';
            logo.style.backgroundPosition = 'center';
            logo.innerHTML = ''; // Remove text if image loads
          };
          img.onerror = function() {
            // Keep the text if image fails to load
            logo.innerHTML = logo.getAttribute('data-fallback') || logo.parentElement.querySelector('h4').textContent.charAt(0).toUpperCase();
          };
          img.src = `/uploads/${logoPath}`;
        } else {
          // No logo path, show text
          logo.innerHTML = logo.parentElement.querySelector('h4').textContent.charAt(0).toUpperCase();
        }
      });
    });
  </script>
