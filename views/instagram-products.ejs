<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Instagram Accounts - Premium Social Media Marketplace</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    :root {
      --primary: #E4405F;
      --primary-dark: #C13584;
      --secondary: #f8fafc;
      --accent: #405DE6;
      --success: #10b981;
      --warning: #f59e0b;
      --error: #ef4444;
      --text-primary: #1e293b;
      --text-secondary: #64748b;
      --text-muted: #94a3b8;
      --bg-primary: #ffffff;
      --bg-secondary: #f8fafc;
      --border: #e2e8f0;
      --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --instagram-gradient: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
      --radius: 12px;
      --radius-lg: 16px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: var(--text-primary);
      background: var(--bg-secondary);
    }

    .instagram-page {
      min-height: calc(100vh - 72px);
      background: linear-gradient(135deg, #f8fafc 0%, #fce7f3 30%, #f0f9ff 70%, #ecfdf5 100%);
      padding: 40px 20px;
      padding-top: 120px;
      position: relative;
      overflow: hidden;
    }

    .instagram-page::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background:
        radial-gradient(circle at 20% 30%, rgba(228, 64, 95, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(64, 93, 230, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(204, 35, 102, 0.06) 0%, transparent 50%);
      pointer-events: none;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 20px;
      position: relative;
      z-index: 1;
    }

    .section-header {
      text-align: center;
      margin-bottom: 4rem;
      background: var(--instagram-gradient);
      color: white;
      padding: 60px 40px;
      border-radius: 24px;
      box-shadow: 0 25px 50px rgba(228, 64, 95, 0.25);
      position: relative;
      overflow: hidden;
    }

    .section-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .section-title {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      margin-bottom: 1rem;
      position: relative;
      z-index: 2;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }

    .section-title i {
      font-size: 0.8em;
      opacity: 0.9;
    }

    .section-subtitle {
      font-size: 1.2rem;
      opacity: 0.95;
      max-width: 700px;
      margin: 0 auto;
      position: relative;
      z-index: 2;
    }

    /* Filters and Search */
    .filters-section {
      background: white;
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 3rem;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
    }

    .filters-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .filter-label {
      font-weight: 600;
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .filter-select, .filter-input {
      padding: 12px 16px;
      border: 2px solid var(--border);
      border-radius: 12px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: white;
    }

    .filter-select:focus, .filter-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(228, 64, 95, 0.1);
    }

    .filter-actions {
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
    }

    /* Instagram Accounts Grid */
    .accounts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .account-card {
      background: var(--bg-primary);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: var(--shadow);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 1px solid var(--border);
      position: relative;
    }

    .account-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary);
    }

    .account-header {
      background: var(--instagram-gradient);
      padding: 20px;
      color: white;
      position: relative;
    }

    .account-verified {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(10px);
    }

    .account-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 12px;
      font-size: 1.5rem;
      backdrop-filter: blur(10px);
    }

    .account-username {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .account-handle {
      opacity: 0.9;
      font-size: 0.9rem;
    }

    .account-stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
      margin-top: 15px;
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-size: 1.2rem;
      font-weight: 700;
      display: block;
    }

    .stat-label {
      font-size: 0.8rem;
      opacity: 0.9;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .account-details {
      padding: 24px;
    }

    .account-description {
      color: var(--text-secondary);
      font-size: 0.95rem;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .account-features {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-bottom: 20px;
    }

    .feature-tag {
      background: rgba(228, 64, 95, 0.1);
      color: var(--primary);
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
    }

    .account-price-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .account-price {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary);
    }

    .account-rating {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      color: var(--text-secondary);
    }

    .account-actions {
      display: flex;
      gap: 12px;
    }

    .btn {
      padding: 12px 20px;
      border: none;
      border-radius: 25px;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      flex: 1;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .btn-primary {
      background: var(--instagram-gradient);
      color: white;
      box-shadow: 0 4px 15px rgba(228, 64, 95, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(228, 64, 95, 0.4);
    }

    .btn-secondary {
      background: var(--bg-secondary);
      color: var(--text-secondary);
      border: 2px solid var(--border);
    }

    .btn-secondary:hover {
      background: var(--primary);
      color: white;
      border-color: var(--primary);
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    /* Pagination */
    .pagination {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 3rem;
    }

    .page-btn {
      padding: 12px 16px;
      border: 2px solid var(--border);
      background: white;
      color: var(--text-secondary);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      font-weight: 600;
    }

    .page-btn:hover, .page-btn.active {
      background: var(--instagram-gradient);
      color: white;
      border-color: transparent;
    }

    /* No accounts state */
    .no-accounts {
      text-align: center;
      padding: 100px 40px;
      grid-column: 1 / -1;
      background: white;
      border-radius: 20px;
      box-shadow: var(--shadow);
      border: 2px dashed var(--border);
    }

    .no-accounts-icon {
      font-size: 4rem;
      color: var(--primary);
      margin-bottom: 1.5rem;
    }

    .no-accounts h3 {
      margin: 0 0 12px 0;
      font-size: 2rem;
      color: var(--text-secondary);
      font-weight: 600;
    }

    .no-accounts p {
      margin: 0;
      color: var(--text-muted);
      font-size: 1.1rem;
      max-width: 500px;
      margin: 0 auto;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .instagram-page {
        padding: 20px 15px;
        padding-top: 100px;
      }

      .section-header {
        padding: 40px 20px;
        margin-bottom: 3rem;
      }

      .section-title {
        font-size: 2.2rem;
        flex-direction: column;
        gap: 0.5rem;
      }

      .accounts-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .filters-grid {
        grid-template-columns: 1fr;
      }

      .account-actions {
        flex-direction: column;
        gap: 8px;
      }

      .account-price-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
    }

    @media (max-width: 480px) {
      .section-title {
        font-size: 1.8rem;
      }

      .accounts-grid {
        grid-template-columns: 1fr;
      }

      .account-stats {
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
      }
    }

    /* Loading animation */
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .loading {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    /* Instagram specific styling */
    .instagram-logo {
      color: #E4405F;
      font-size: 2rem;
    }

    .verified-badge {
      color: #1DA1F2;
    }
  </style>
</head>
<body>

  <!-- ================= PREMIUM NAVBAR ================ -->
  <%- include('./partials/navbar.ejs') %>
  <!-- =============== END PREMIUM NAVBAR ============== -->

  <!-- ================= INSTAGRAM ACCOUNTS SECTION ================ -->
  <div class="instagram-page">
    <div class="container">
      <div class="section-header">
        <h1 class="section-title">
          <i class="fab fa-instagram instagram-logo"></i>
          Instagram Accounts
        </h1>
        <p class="section-subtitle">Premium verified Instagram accounts with real followers, engagement, and complete setup</p>
      </div>

      <!-- Filters Section -->
      <div class="filters-section">
        <div class="filters-grid">
          <div class="filter-group">
            <label class="filter-label">Follower Range</label>
            <select class="filter-select" id="followerFilter">
              <option value="">All Followers</option>
              <option value="1k-5k">1K - 5K Followers</option>
              <option value="5k-10k">5K - 10K Followers</option>
              <option value="10k-25k">10K - 25K Followers</option>
              <option value="25k-50k">25K - 50K Followers</option>
              <option value="50k+">50K+ Followers</option>
            </select>
          </div>

          <div class="filter-group">
            <label class="filter-label">Account Type</label>
            <select class="filter-select" id="typeFilter">
              <option value="">All Types</option>
              <option value="personal">Personal Account</option>
              <option value="business">Business Account</option>
              <option value="creator">Creator Account</option>
              <option value="verified">Verified (Blue Check)</option>
            </select>
          </div>

          <div class="filter-group">
            <label class="filter-label">Price Range</label>
            <select class="filter-select" id="priceFilter">
              <option value="">All Prices</option>
              <option value="0-50">$0 - $50</option>
              <option value="50-100">$50 - $100</option>
              <option value="100-250">$100 - $250</option>
              <option value="250-500">$250 - $500</option>
              <option value="500+">$500+</option>
            </select>
          </div>

          <div class="filter-group">
            <label class="filter-label">Country</label>
            <select class="filter-select" id="countryFilter">
              <option value="">All Countries</option>
              <option value="US">United States</option>
              <option value="UK">United Kingdom</option>
              <option value="CA">Canada</option>
              <option value="AU">Australia</option>
              <option value="DE">Germany</option>
              <option value="FR">France</option>
              <option value="IT">Italy</option>
              <option value="ES">Spain</option>
              <option value="BR">Brazil</option>
              <option value="MX">Mexico</option>
            </select>
          </div>
        </div>

        <div class="filter-actions">
          <button class="btn btn-secondary" id="resetFilters">
            <i class="fas fa-undo"></i> Reset Filters
          </button>
          <button class="btn btn-primary" id="applyFilters">
            <i class="fas fa-search"></i> Apply Filters
          </button>
        </div>
      </div>

      <!-- Accounts Grid -->
      <div class="accounts-grid">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <div class="account-card" data-followers="<%= product.numberOfSubscribers || 0 %>" data-price="<%= product.price || 0 %>" data-type="<%= product.subcategory || 'personal' %>" data-country="<%= product.countryOfRegistration || 'US' %>">
              <div class="account-header">
                <% if (product.registrationMethod && product.registrationMethod.includes('Verified')) { %>
                  <div class="account-verified">
                    <i class="fas fa-check verified-badge"></i>
                  </div>
                <% } %>
                <div class="account-avatar">
                  <i class="fab fa-instagram"></i>
                </div>
                <div class="account-username"><%= product.name || 'Premium Account' %></div>
                <div class="account-handle">@<%= (product.name || 'account').toLowerCase().replace(/\s+/g, '') %></div>

                <div class="account-stats">
                  <div class="stat-item">
                    <span class="stat-number"><%= (product.numberOfSubscribers || 0).toLocaleString() %></span>
                    <span class="stat-label">Followers</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number"><%= Math.floor((product.numberOfSubscribers || 0) * 0.1) %></span>
                    <span class="stat-label">Following</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number"><%= Math.floor((product.numberOfSubscribers || 0) * 0.05) %></span>
                    <span class="stat-label">Posts</span>
                  </div>
                </div>
              </div>

              <div class="account-details">
                <p class="account-description">
                  <%= product.shortDescription || 'High-quality Instagram account with real followers and engagement. Perfect for business marketing, influencer promotion, or personal branding.' %>
                </p>

                <div class="account-features">
                  <% if (product.registrationMethod) { %>
                    <span class="feature-tag"><%= product.registrationMethod %></span>
                  <% } %>
                  <% if (product.profileFullness) { %>
                    <span class="feature-tag"><%= product.profileFullness %></span>
                  <% } %>
                  <% if (product.loginMethod) { %>
                    <span class="feature-tag"><%= product.loginMethod %></span>
                  <% } %>
                  <% if (product.yearOfRegistration) { %>
                    <span class="feature-tag"><%= product.yearOfRegistration %></span>
                  <% } %>
                  <% if (product.countryOfRegistration) { %>
                    <span class="feature-tag"><%= product.countryOfRegistration %></span>
                  <% } %>
                </div>

                <div class="account-price-section">
                  <div class="account-price">$<%= product.price %></div>
                  <div class="account-rating">
                    <i class="fas fa-star" style="color: #f59e0b;"></i>
                    <% if (product.reviews && product.reviews.length > 0) { %>
                      <% const avgRating = product.reviews.reduce((sum, review) => sum + review.rating, 0) / product.reviews.length %>
                      <%= avgRating.toFixed(1) %> (<%= product.reviews.length %>)
                    <% } else { %>
                      4.9 (0)
                    <% } %>
                  </div>
                </div>

                <div class="account-actions">
                  <a href="/store/<%= product.sellerId %>" class="btn btn-secondary">
                    <i class="fas fa-store"></i> View Store
                  </a>
                  <a href="/product/<%= product.sellerId %>/<%= product.id %>" class="btn btn-primary">
                    <i class="fas fa-eye"></i> View Details
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="no-accounts">
            <div class="no-accounts-icon">
              <i class="fab fa-instagram"></i>
            </div>
            <h3>No Instagram Accounts Available</h3>
            <p>Instagram accounts will appear here once sellers add them to their stores. Check back later for new premium accounts.</p>
            <a href="/stores" class="btn btn-primary">Browse All Stores</a>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="pagination">
          <% if (hasPrevPage) { %>
            <a href="/instagram?page=<%= prevPage %>" class="page-btn">
              <i class="fas fa-chevron-left"></i> Previous
            </a>
          <% } %>

          <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
            <a href="/instagram?page=<%= i %>" class="page-btn <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
          <% } %>

          <% if (hasNextPage) { %>
            <a href="/instagram?page=<%= nextPage %>" class="page-btn">
              Next <i class="fas fa-chevron-right"></i>
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- ================= FOOTER ================ -->
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-links">
        <a href="/">Home</a>
        <a href="/stores">Stores</a>
        <a href="/products">Products</a>
        <a href="/instagram">Instagram</a>
        <a href="/services">Services</a>
        <% if (locals.user) { %>
          <a href="/orders">My Orders</a>
          <% if (locals.user.isSeller) { %>
            <a href="/seller/dashboard">Dashboard</a>
          <% } %>
        <% } else { %>
          <a href="/login">Login</a>
        <% } %>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 DigitalMarket. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script src="/js/script.js"></script>
  <script>
    // Instagram accounts filtering functionality
    document.addEventListener('DOMContentLoaded', function() {
      const followerFilter = document.getElementById('followerFilter');
      const typeFilter = document.getElementById('typeFilter');
      const priceFilter = document.getElementById('priceFilter');
      const countryFilter = document.getElementById('countryFilter');
      const resetBtn = document.getElementById('resetFilters');
      const applyBtn = document.getElementById('applyFilters');
      const accountCards = document.querySelectorAll('.account-card');

      function applyFilters() {
        const followerRange = followerFilter.value;
        const accountType = typeFilter.value;
        const priceRange = priceFilter.value;
        const country = countryFilter.value;

        accountCards.forEach(card => {
          const followers = parseInt(card.dataset.followers) || 0;
          const price = parseFloat(card.dataset.price) || 0;
          const type = card.dataset.type || '';
          const cardCountry = card.dataset.country || '';

          let showCard = true;

          // Follower filter
          if (followerRange) {
            switch(followerRange) {
              case '1k-5k':
                if (followers < 1000 || followers > 5000) showCard = false;
                break;
              case '5k-10k':
                if (followers < 5000 || followers > 10000) showCard = false;
                break;
              case '10k-25k':
                if (followers < 10000 || followers > 25000) showCard = false;
                break;
              case '25k-50k':
                if (followers < 25000 || followers > 50000) showCard = false;
                break;
              case '50k+':
                if (followers < 50000) showCard = false;
                break;
            }
          }

          // Type filter
          if (accountType && !type.toLowerCase().includes(accountType.toLowerCase())) {
            showCard = false;
          }

          // Price filter
          if (priceRange) {
            switch(priceRange) {
              case '0-50':
                if (price < 0 || price > 50) showCard = false;
                break;
              case '50-100':
                if (price < 50 || price > 100) showCard = false;
                break;
              case '100-250':
                if (price < 100 || price > 250) showCard = false;
                break;
              case '250-500':
                if (price < 250 || price > 500) showCard = false;
                break;
              case '500+':
                if (price < 500) showCard = false;
                break;
            }
          }

          // Country filter
          if (country && cardCountry !== country) {
            showCard = false;
          }

          card.style.display = showCard ? 'block' : 'none';
        });
      }

      function resetFilters() {
        followerFilter.value = '';
        typeFilter.value = '';
        priceFilter.value = '';
        countryFilter.value = '';
        accountCards.forEach(card => {
          card.style.display = 'block';
        });
      }

      applyBtn.addEventListener('click', applyFilters);
      resetBtn.addEventListener('click', resetFilters);

      // Auto-apply filters on change
      [followerFilter, typeFilter, priceFilter, countryFilter].forEach(filter => {
        filter.addEventListener('change', applyFilters);
      });
    });
  </script>
</body>
</html>