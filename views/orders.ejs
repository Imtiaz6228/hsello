<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - DigitalMarket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .orders-container {
            max-width: 1200px;
            margin: 120px auto 40px;
            padding: 0 20px;
        }
        .order-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            margin-bottom: 20px;
            transition: transform 0.2s ease;
        }
        .order-card:hover {
            transform: translateY(-2px);
        }
        .order-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px;
            border-radius: 12px 12px 0 0;
        }
        .order-body {
            padding: 20px;
        }
        .order-item {
            display: flex;
            gap: 15px;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }
        .order-item:last-child {
            border-bottom: none;
        }
        .product-image {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid #f0f0f0;
        }
        .order-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
        }
        .status-completed { background: #d4edda; color: #155724; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-refunded { background: #f8d7da; color: #721c24; }
        .status-dispute { background: #e2e3e5; color: #383d41; }

        .dispute-info {
            background: #fff6e8;
            border: 1px solid #f39c12;
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
        }
        .dispute-info h6 {
            color: #f39c12;
            margin: 0 0 10px 0;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            flex-wrap: wrap;
        }
        .btn-order {
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 0.9em;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .btn-download { background: #27ae60; color: white; }
        .btn-download:hover { background: #219a52; }
        .btn-dispute { background: #e74c3c; color: white; }
        .btn-dispute:hover { background: #c0392b; }
        .btn-view-dispute { background: #f39c12; color: white; }
        .btn-view-dispute:hover { background: #e67e22; }
        .btn-contact { background: #3498db; color: white; }
        .btn-contact:hover { background: #2980b9; }

        .no-orders {
            text-align: center;
            padding: 60px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }
        .no-orders i {
            font-size: 3em;
            color: #95a5a6;
            margin-bottom: 20px;
        }
        .no-orders h4 {
            color: #34495e;
            margin-bottom: 15px;
        }

        @media (max-width: 768px) {
            .order-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
            .action-buttons {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="orders-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-shopping-bag me-3"></i>My Orders</h1>
                <p class="text-muted mb-0">View and download your order history and purchased products</p>
            </div>
            <div class="d-flex gap-2 flex-wrap">
                <% if (orders && orders.length > 0) { %>
                    <a href="/download-all-orders" class="btn btn-success btn-lg">
                        <i class="fas fa-file-csv me-2"></i>Download Orders CSV
                    </a>
                <% } %>
                <a href="/stores" class="btn btn-primary">
                    <i class="fas fa-store me-2"></i>Continue Shopping
                </a>
            </div>
        </div>

        <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <div class="order-card">
                    <div class="order-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                            <h5 class="mb-0">Order #<%= order._id %></h5>
                                <small><%= new Date(order.orderDate).toLocaleDateString() %> at <%= new Date(order.orderDate).toLocaleTimeString() %></small>
                            </div>
                            <div class="text-end">
                                <div class="fs-5 fw-bold">₽<%= order.totalCost.toFixed(2) %></div>
                                <span class="order-status status-<%= order.status %>">
                                    <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="order-body">
                        <div class="order-item">
                            <% if (order.isDigital) { %>
                                <div>
                                    <i class="fas fa-download fa-2x text-primary"></i>
                                </div>
                            <% } else { %>
                                <img src="/uploads/<%= order.productImage || 'placeholder.jpg' %>"
                                     alt="<%= order.productName %>" class="product-image" onerror="this.src='/images/placeholder.jpg'">
                            <% } %>
                            <div class="flex-grow-1">
                                <h6 class="mb-1"><%= order.productName %></h6>
                                <p class="mb-1 text-muted">Quantity: <%= order.quantity %> | Unit Price: ₽<%= order.price.toFixed(2) %></p>
                                <% if (order.isDigital) { %>
                                    <small class="text-success"><i class="fas fa-check-circle me-1"></i>Digital Product</small>
                                <% } %>
                            </div>
                        </div>

                        <% const orderDispute = disputes.find(d => d.orderId && d.orderId.toString() === order._id.toString()); %>
                        <% if (orderDispute) { %>
                            <div class="dispute-info">
                                <h6><i class="fas fa-exclamation-triangle me-2"></i>Dispute Status</h6>
                                <p class="mb-2">
                                    <strong>Status:</strong>
                                    <span class="badge bg-<%= orderDispute.status === 'open' ? 'warning' : orderDispute.status === 'closed' ? 'success' : orderDispute.status === 'auto-closed' ? 'secondary' : 'primary' %>">
                                        <%= orderDispute.status.charAt(0).toUpperCase() + orderDispute.status.slice(1).replace('-', ' ') %>
                                    </span>
                                </p>
                                <% if (orderDispute.status === 'open') { %>
                                    <p class="mb-2">
                                        <strong>Auto-close:</strong> <%= new Date(orderDispute.autoCloseAt).toLocaleString() %>
                                    </p>
                                <% } %>
                                <a href="/dispute/<%= orderDispute._id %>" class="btn btn-sm btn-view-dispute">
                                    <i class="fas fa-eye me-1"></i>View Dispute
                                </a>
                            </div>
                        <% } %>

                        <div class="action-buttons">
                            <% if (order.isDigital && order.status === 'completed') { %>
                                <a href="/download/<%= order._id %>/<%= order.productId %>" class="btn-order btn-download">
                                    <i class="fas fa-download me-1"></i>Download
                                </a>
                            <% } %>

                            <% if (order.status === 'completed' && !orderDispute) { %>
                                <form method="POST" action="/dispute/create/<%= order._id %>" class="d-inline" onsubmit="return confirmDispute()">
                                    <input type="hidden" name="reason" value="Product Issue">
                                    <input type="hidden" name="description" value="Issue with purchased product">
                                    <button type="submit" class="btn-order btn-dispute">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Open Dispute
                                    </button>
                                </form>
                            <% } %>

                            <% if (order.status === 'completed' || order.status === 'refunded') { %>
                                <a href="/contact-seller/<%= order.sellerId %>" class="btn-order btn-contact">
                                    <i class="fas fa-comments me-1"></i>Contact Seller
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-orders">
                <i class="fas fa-shopping-cart"></i>
                <h4>No Orders Yet</h4>
                <p>You haven't made any purchases yet. Start exploring our stores and find something you like!</p>
                <a href="/stores" class="btn btn-primary">
                    <i class="fas fa-store me-2"></i>Browse Stores
                </a>
            </div>
        <% } %>
    </div>

    <script>
        function confirmDispute() {
            return confirm('Are you sure you want to open a dispute? This will notify the seller and start a 24-hour resolution period.');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
