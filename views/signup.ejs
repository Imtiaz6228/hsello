<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Sign Up - DigitalMarket</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- ================= PROFESSIONAL NAVBAR ================ -->
  <%- include('partials/navbar') %>

  <div class="page-top-space"></div>

  <!-- SIGNUP -->
  <main>
    <div class="auth-page">
      <div class="auth-box">
        <h2>Create Account</h2>

        <!-- Flash messages -->
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert error"><%= error_msg %></div>
        <% } %>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert success"><%= success_msg %></div>
        <% } %>

        <form id="signupForm" class="auth-form" method="POST" action="/signup">
          <div>
            <label for="firstName">First Name</label>
            <input id="firstName" name="firstName" class="auth-input" type="text" required />
          </div>

          <div>
            <label for="lastName">Last Name</label>
            <input id="lastName" name="lastName" class="auth-input" type="text" required />
          </div>

          <div>
            <label for="signupEmail">Email Address</label>
            <input id="signupEmail" name="email" class="auth-input" type="email" required />
          </div>

          <div>
            <label for="signupPassword">Password</label>
            <div class="password-wrapper">
              <input id="signupPassword" name="password" class="auth-input" type="password" required />
              <span class="password-toggle" onclick="togglePassword('signupPassword', this)">Show</span>
            </div>
          </div>

          <div>
            <label for="confirmPassword">Confirm Password</label>
            <div class="password-wrapper">
              <input id="confirmPassword" name="confirmPassword" class="auth-input" type="password" required />
              <span class="password-toggle" onclick="togglePassword('confirmPassword', this)">Show</span>
            </div>
          </div>

          <!-- âœ… Agree to terms checkbox -->
          <div class="auth-checkbox">
            <input type="checkbox" id="agreeTerms" name="agreeTerms" required />
            <label for="agreeTerms">I agree to the terms and conditions</label>
          </div>

          <button type="submit" class="auth-btn">Sign Up</button>
        </form>

        <div class="auth-footer">
          Already have an account? <a href="/login">Log in</a>
        </div>
      </div>
    </div>
  </main>

  <script src="/js/script.js"></script>
</body>
</html>
