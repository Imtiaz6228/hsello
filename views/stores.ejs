  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Digital Stores Marketplace - Hsello",
    "description": "Browse verified digital stores and connect with trusted sellers offering premium accounts and digital services",
    "url": "https://hsello.com/stores",
    "isPartOf": {
      "@type": "WebSite",
      "name": "Hsello",
      "url": "https://hsello.com"
    },
    "mainEntity": {
      "@type": "ItemList",
      "name": "Digital Stores",
      "description": "Collection of verified digital stores offering premium accounts and services"
    },
    "breadcrumb": {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://hsello.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Stores",
          "item": "https://hsello.com/stores"
        }
      ]
    }
  }
  </script>
  <style>
    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --secondary: #f8fafc;
      --accent: #06b6d4;
      --success: #10b981;
      --warning: #f59e0b;
      --error: #ef4444;
      --text-primary: #1e293b;
      --text-secondary: #64748b;
      --text-muted: #94a3b8;
      --bg-primary: #ffffff;
      --bg-secondary: #f8fafc;
      --border: #e2e8f0;
      --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --radius: 12px;
      --radius-lg: 16px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: var(--text-primary);
      background: var(--bg-secondary);
    }

    .stores-page {
      min-height: calc(100vh - 72px);
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 50%, #f0f9ff 100%);
      padding: 40px 20px;
      padding-top: 120px;
      position: relative;
      overflow: hidden;
    }

    .stores-page::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background:
        radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(6, 182, 212, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.05) 0%, transparent 50%);
      pointer-events: none;
    }

    .stores-container {
      max-width: 1400px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

    .stores-header {
      text-align: center;
      margin-bottom: 60px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
      color: white;
      padding: 60px 40px;
      border-radius: 24px;
      box-shadow: 0 25px 50px rgba(0,0,0,0.15);
      position: relative;
      overflow: hidden;
    }

    .stores-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .stores-header h1 {
      margin: 0;
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      position: relative;
      z-index: 2;
      background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .stores-header p {
      margin: 15px 0 0 0;
      opacity: 0.95;
      font-size: 1.2rem;
      position: relative;
      z-index: 2;
    }

    .stores-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
      gap: 2rem;
      margin-top: 20px;
    }

    .store-card {
      background: var(--bg-primary);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: var(--shadow);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 1px solid var(--border);
      position: relative;
      group: hover;
    }

    .store-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary);
    }

    .store-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .store-card:hover::before {
      opacity: 1;
    }

    .store-banner {
      height: 180px;
      background-size: cover;
      background-position: center;
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      position: relative;
      overflow: hidden;
    }

    .store-banner::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(6, 182, 212, 0.1) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .store-card:hover .store-banner::after {
      opacity: 1;
    }

    .store-logo {
      position: absolute;
      bottom: -30px;
      left: 24px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: white;
      border: 4px solid white;
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      background-size: cover;
      background-position: center;
      transition: all 0.3s ease;
      z-index: 2;
    }

    .store-card:hover .store-logo {
      transform: scale(1.1);
      box-shadow: 0 12px 35px rgba(0,0,0,0.2);
    }

    .store-content {
      padding: 40px 24px 24px 24px;
    }

    .store-info {
      margin-bottom: 20px;
    }

    .store-name {
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 8px;
      line-height: 1.3;
    }

    .store-seller {
      color: var(--text-secondary);
      font-size: 0.95rem;
      margin-bottom: 12px;
      font-weight: 500;
    }

    .store-category {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
      color: #166534;
      padding: 6px 14px;
      border-radius: 20px;
      font-weight: 600;
      text-transform: capitalize;
      font-size: 0.85rem;
      margin-bottom: 16px;
      border: 1px solid #bbf7d0;
    }

    .store-description {
      color: var(--text-secondary);
      font-size: 0.95rem;
      line-height: 1.6;
      margin-bottom: 20px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* Enhanced Store Stats */
    .store-stats {
      background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 16px;
      margin: 16px 0;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }

    .stats-item {
      text-align: center;
      padding: 8px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .stats-value {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.25rem;
    }

    .stats-label {
      font-size: 0.75rem;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: 600;
    }

    .rating-stars {
      display: inline-flex;
      align-items: center;
      gap: 3px;
      margin-top: 8px;
    }

    .rating-stars i {
      font-size: 0.9rem;
    }

    .store-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .store-btn {
      padding: 12px 20px;
      border: none;
      border-radius: 25px;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      flex: 1;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .store-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }

    .store-btn:hover::before {
      left: 100%;
    }

    .store-btn.visit {
      background: var(--gradient);
      color: white;
      box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

    .store-btn.visit:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
    }

    .store-btn.manage {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .store-btn.manage:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
    }

    .no-stores {
      text-align: center;
      padding: 100px 40px;
      grid-column: 1 / -1;
      background: white;
      border-radius: 20px;
      box-shadow: var(--shadow);
      border: 2px dashed var(--border);
    }

    .no-stores i {
      font-size: 4rem;
      color: var(--text-muted);
      margin-bottom: 1.5rem;
    }

    .no-stores h3 {
      margin: 0 0 12px 0;
      font-size: 2rem;
      color: var(--text-secondary);
      font-weight: 600;
    }

    .no-stores p {
      margin: 0;
      color: var(--text-muted);
      font-size: 1.1rem;
      max-width: 500px;
      margin: 0 auto;
    }

    .become-seller-card {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 50%, #ff6b6b 100%);
      color: white;
      text-align: center;
      padding: 50px 40px;
      border-radius: 24px;
      grid-column: 1 / -1;
      margin: 40px 0;
      box-shadow: 0 20px 40px rgba(245, 87, 108, 0.3);
      position: relative;
      overflow: hidden;
    }

    .become-seller-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .become-seller-card h3 {
      margin: 0 0 16px 0;
      font-size: 2rem;
      font-weight: 700;
      position: relative;
      z-index: 2;
    }

    .become-seller-card p {
      margin: 0 0 24px 0;
      opacity: 0.95;
      font-size: 1.1rem;
      position: relative;
      z-index: 2;
    }

    .become-seller-btn {
      background: white;
      color: #f5576c;
      padding: 14px 28px;
      border-radius: 25px;
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
      position: relative;
      z-index: 2;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .become-seller-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      background: #f8fafc;
    }

    /* Floating Animation */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    .store-card:nth-child(odd) {
      animation: float 6s ease-in-out infinite;
    }

    .store-card:nth-child(even) {
      animation: float 6s ease-in-out infinite reverse;
    }

    @media (max-width: 768px) {
      .stores-page {
        padding: 20px 15px;
        padding-top: 100px;
      }

      .stores-header {
        padding: 40px 20px;
        margin-bottom: 40px;
      }

      .stores-header h1 {
        font-size: 2.2rem;
      }

      .stores-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .store-actions {
        flex-direction: column;
        gap: 10px;
      }

      .store-stats {
        grid-template-columns: 1fr;
        gap: 8px;
      }

      .stats-item {
        padding: 12px 8px;
      }

      .store-btn {
        padding: 14px 20px;
        font-size: 0.95rem;
      }
    }

    @media (max-width: 480px) {
      .stores-header h1 {
        font-size: 1.8rem;
      }

      .store-content {
        padding: 30px 20px 20px 20px;
      }

      .store-name {
        font-size: 1.2rem;
      }
    }
  </style>
</head>
<body>

  <!-- ================= PREMIUM NAVBAR ================ -->
  <%- include('./partials/navbar') %>
  <!-- =============== END PREMIUM NAVBAR ============== -->

  <!-- ================= STORES CONTENT ================ -->
  <div class="stores-page">
    <div class="stores-container">
      <!-- Page Header -->
      <div class="stores-header">
        <h1>Stores & Sellers</h1>
        <p>Discover amazing digital products from verified sellers</p>
      </div>

      <!-- Become Seller Card -->
      <% if (!locals.user) { %>
        <div class="become-seller-card">
          <h3>Want to become a seller?</h3>
          <p>Join our platform and start selling your digital products</p>
          <a href="/signup" class="become-seller-btn">Sign Up Now</a>
        </div>
      <% } else if (!locals.user.isSeller) { %>
        <div class="become-seller-card">
          <h3>Become a seller today!</h3>
          <p>Start your own digital store and reach thousands of customers</p>
          <a href="/become-seller" class="become-seller-btn">Apply Now</a>
        </div>
      <% } %>

      <!-- Stores Grid -->
      <div class="stores-grid">
        <% if (stores.length === 0) { %>
          <div class="no-stores">
            <h3>No stores available yet</h3>
            <p>Stores will appear here once sellers are approved by our admin team.</p>
          </div>
        <% } else { %>
          <% stores.forEach(storeData => { %>
            <div class="store-card">
              <div class="store-banner" style="background-image: url('/uploads/<%= storeData.store.banner %>');">
                <div class="store-logo" style="background-image: url('/uploads/<%= storeData.store.logo %>');"></div>
              </div>
              <div class="store-content">
                <div class="store-info">
                  <h3 class="store-name"><%= storeData.store.name %></h3>
                  <p class="store-seller">by <%= storeData.sellerName %></p>

                  <!-- Store Stats -->
                  <div class="store-stats mb-3">
                    <div class="row text-center">
                      <div class="col-4">
                        <div class="stats-item">
                          <div class="stats-value"><%= storeData.totalSales || 0 %></div>
                          <div class="stats-label">Sales</div>
                        </div>
                      </div>
                      <div class="col-4">
                        <% if (storeData.averageRating && storeData.averageRating > 0) { %>
                          <div class="stats-item">
                            <div class="stats-value">
                              <i class="fas fa-star text-warning"></i>
                              <%= storeData.averageRating %>
                            </div>
                            <div class="stats-label">Rating</div>
                          </div>
                        <% } else { %>
                          <div class="stats-item">
                            <div class="stats-value">
                              <i class="fas fa-star text-muted"></i>
                              --
                            </div>
                            <div class="stats-label">No Ratings</div>
                          </div>
                        <% } %>
                      </div>
                      <div class="col-4">
                        <div class="stats-item">
                          <div class="stats-value"><%= storeData.reviewCount && storeData.reviewCount > 0 ? storeData.reviewCount : 0 %></div>
                          <div class="stats-label">Reviews</div>
                        </div>
                      </div>
                    </div>

                    <!-- Rating Stars Display -->
                    <% if (storeData.averageRating && storeData.averageRating > 0) { %>
                      <div class="rating-stars mb-3 text-center">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <% if (i <= Math.floor(storeData.averageRating)) { %>
                            <i class="fas fa-star text-warning"></i>
                          <% } else if (i - 0.5 <= storeData.averageRating) { %>
                            <i class="fas fa-star-half-alt text-warning"></i>
                          <% } else { %>
                            <i class="far fa-star text-muted"></i>
                          <% } %>
                        <% } %>
                      </div>
                    <% } %>
                  </div>

                  <span class="store-category"><%= storeData.store.category %></span>
                  <p class="store-description"><%= storeData.store.description %></p>
                </div>

                <div class="store-actions">
                  <a href="/store/<%= storeData.sellerId %>" class="store-btn visit">👀 Visit Store</a>
                  <% if (locals.user && locals.user.id === storeData.sellerId) { %>
                    <a href="/my-store" class="store-btn manage">⚙️ Manage Store</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
    </div>
  </div>

  <!-- ================= FOOTER ================ -->
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-links">
        <a href="/">Home</a>
        <a href="/stores">Stores</a>
        <a href="#products">Products</a>
        <a href="#games">Games</a>
        <a href="#ai">AI</a>
        <a href="#pricing">Pricing</a>
        <a href="/login">Login</a>
        <a href="/signup">Sign Up</a>
      </div>
      <p>&copy; 2025 DigitalMarket. All rights reserved.</p>
    </div>
  </footer>

</body>
